model Quotation {
  id                String           @id @default(cuid())
  quotationNumber   String           @unique @map("quotation_number")
  customerId        String           @map("customer_id")
  companyId         String           @map("company_id")
  branchId          String?          @map("branch_id")
  userId            String           @map("user_id")
  
  // Items y totales
  subtotal          Decimal          @db.Decimal(10, 2)
  discount          Decimal          @default(0) @db.Decimal(10, 2)
  discountPercent   Decimal          @default(0) @map("discount_percent") @db.Decimal(5, 2)
  tax               Decimal          @db.Decimal(10, 2)
  total             Decimal          @db.Decimal(10, 2)
  
  // Validez y estado
  validUntil        DateTime         @map("valid_until")
  status            QuotationStatus  @default(DRAFT)
  
  // Notas y condiciones
  notes             String?
  termsConditions   String?          @map("terms_conditions")
  
  // Información de envío
  sentVia           String[]         @default([]) @map("sent_via")  // ["email", "whatsapp"]
  sentAt            DateTime?        @map("sent_at")
  emailSentAt       DateTime?        @map("email_sent_at")
  whatsappSentAt    DateTime?        @map("whatsapp_sent_at")
  
  // Seguimiento
  viewedAt          DateTime?        @map("viewed_at")
  viewCount         Int              @default(0) @map("view_count")
  
  // Conversión a venta
  convertedToSaleId String?          @unique @map("converted_to_sale_id")
  convertedAt       DateTime?        @map("converted_at")
  
  // Auditoría
  createdAt         DateTime         @default(now()) @map("created_at")
  updatedAt         DateTime         @updatedAt @map("updated_at")
  
  // Relaciones
  customer          Customer         @relation(fields: [customerId], references: [id])
  company           Company          @relation(fields: [companyId], references: [id])
  branch            Branch?          @relation(fields: [branchId], references: [id])
  createdBy         User             @relation("QuotationCreatedBy", fields: [userId], references: [id])
  items             QuotationItem[]
  
  @@index([companyId])
  @@index([customerId])
  @@index([branchId])
  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@index([validUntil])
  @@map("quotations")
}

model QuotationItem {
  id          String    @id @default(cuid())
  quotationId String    @map("quotation_id")
  productId   String    @map("product_id")
  
  // Detalles del producto en el momento de cotización
  productName String    @map("product_name")
  description String?
  
  // Cantidades y precios
  quantity    Int
  unitPrice   Decimal   @map("unit_price") @db.Decimal(10, 2)
  discount    Decimal   @default(0) @db.Decimal(10, 2)
  subtotal    Decimal   @db.Decimal(10, 2)
  
  // Orden de visualización
  sortOrder   Int       @default(0) @map("sort_order")
  
  // Auditoría
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  
  // Relaciones
  quotation   Quotation @relation(fields: [quotationId], references: [id], onDelete: Cascade)
  product     Product   @relation(fields: [productId], references: [id])
  
  @@index([quotationId])
  @@index([productId])
  @@map("quotation_items")
}

model OnlineOrder {
  id                String      @id @default(cuid())
  orderNumber       String      @unique @map("order_number")
  companyId         String      @map("company_id")
  
  // Tipo de orden
  type              OrderType
  status            OrderStatus @default(PENDING)
  
  // Información del cliente (sin relación - cliente anónimo)
  customerName      String      @map("customer_name")
  customerEmail     String      @map("customer_email")
  customerPhone     String      @map("customer_phone")
  customerAddress   String?     @map("customer_address")
  
  // Items y totales
  items             Json        // Array de productos con {productId, name, quantity, price, etc}
  subtotal          Decimal     @db.Decimal(10, 2)
  tax               Decimal     @db.Decimal(10, 2)
  total             Decimal     @db.Decimal(10, 2)
  
  // Información de pago (si es venta)
  paymentMethod     String?     @map("payment_method")
  paymentStatus     String?     @default("pending") @map("payment_status")
  transactionId     String?     @map("transaction_id")
  cardLast4         String?     @map("card_last4")
  cardBrand         String?     @map("card_brand")
  
  // Referencias a registros internos creados
  quotationId       String?     @unique @map("quotation_id")
  saleId            String?     @unique @map("sale_id")
  customerId        String?     @map("customer_id") // Si se crea un customer
  storeCustomerId   String?     @map("store_customer_id") // Cliente de tienda en línea
  
  // Notas
  notes             String?
  adminNotes        String?     @map("admin_notes")
  
  // Envío de notificaciones
  emailSentAt       DateTime?   @map("email_sent_at")
  
  // Auditoría
  createdAt         DateTime    @default(now()) @map("created_at")
  updatedAt         DateTime    @updatedAt @map("updated_at")
  processedAt       DateTime?   @map("processed_at")
  
  // Relaciones
  company           Company     @relation(fields: [companyId], references: [id])
  storeCustomer     StoreCustomer? @relation("StoreCustomerOrders", fields: [storeCustomerId], references: [id])
  
  @@index([companyId])
  @@index([type])
  @@index([status])
  @@index([customerEmail])
  @@index([createdAt])
  @@map("online_orders")
}

