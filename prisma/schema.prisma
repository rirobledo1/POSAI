model StoreCustomer {
  id                String                  @id @default(cuid())
  email             String
  password          String?                 // null = compró como invitado
  name              String
  phone             String?
  isVerified        Boolean                 @default(false) @map("is_verified")
  verificationToken String?                 @map("verification_token")
  resetToken        String?                 @map("reset_token")
  resetTokenExpiry  DateTime?               @map("reset_token_expiry")
  lastLoginAt       DateTime?               @map("last_login_at")
  companyId         String                  @map("company_id")
  createdAt         DateTime                @default(now()) @map("created_at")
  updatedAt         DateTime                @updatedAt @map("updated_at")
  
  // Relaciones
  company           Company                 @relation(fields: [companyId], references: [id])
  addresses         StoreCustomerAddress[]
  orders            OnlineOrder[]           @relation("StoreCustomerOrders")
  
  @@unique([email, companyId]) // Un email único por tienda
  @@index([companyId])
  @@index([email])
  @@map("store_customers")
}

model StoreCustomerAddress {
  id              String        @id @default(cuid())
  storeCustomerId String        @map("store_customer_id")
  label           String?       // "Casa", "Oficina", etc.
  name            String        // Nombre de quien recibe
  phone           String        // Teléfono de contacto
  street          String        // Calle y número
  colony          String?       // Colonia
  city            String
  state           String
  postalCode      String?       @map("postal_code")
  country         String        @default("México")
  references      String?       // Referencias adicionales
  isDefault       Boolean       @default(false) @map("is_default")
  createdAt       DateTime      @default(now()) @map("created_at")
  updatedAt       DateTime      @updatedAt @map("updated_at")
  
  // Relaciones
  storeCustomer   StoreCustomer @relation(fields: [storeCustomerId], references: [id], onDelete: Cascade)
  
  @@index([storeCustomerId])
  @@map("store_customer_addresses")
}

model LoginAttempt {
  id          String   @id @default(cuid())
  identifier  String   // IP o email
  type        String   // 'ip' o 'email'
  success     Boolean  @default(false)
  userId      String?  @map("user_id")
  userAgent   String?  @map("user_agent")
  attemptedAt DateTime @default(now()) @map("attempted_at")
  createdAt   DateTime @default(now()) @map("created_at")
  
  @@index([identifier])
  @@index([type])
  @@index([attemptedAt])
  @@index([success])
  @@index([identifier, type, success, attemptedAt])
  @@map("login_attempts")
}
